        }
        @{
            if (@Model.DateEnd != null)
            {
                <div class="Info">
                    <i class="fa-solid fa-calendar"></i>
                    <span class="Info-Title">تاریخ پایان:</span>
                    <span class="Info-Body">@ShamsiService.ToShamsi((DateTime)Model.DateEnd) </span>
                </div>
            }
        }

        <div class="Info">
