@using Kids.Services
@model Kids.Areas.Admin.AdminDTO.EditCourseDTO
@{
    ViewData["Title"] = "ویرایش دوره";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>ویرایش دوره </h1>

<form action="/Admin/Course/Edit" method="post" enctype="multipart/form-data">
