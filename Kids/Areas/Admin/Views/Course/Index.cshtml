@using Kids.Services
@model Microsoft.EntityFrameworkCore.Query.IIncludableQueryable<Kids.Models.Course,Kids.Models.User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
